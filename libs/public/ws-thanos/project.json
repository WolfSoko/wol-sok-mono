{
  "name": "ws-thanos",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/public/ws-thanos/src",
  "prefix": "ws",
  "tags": ["shared", "published", "ui"],
  "targets": {
    "build": {
      "executor": "@nx/angular:ng-packagr-lite",
      "outputs": ["{workspaceRoot}/dist/libs/public/ws-thanos"],
      "options": {
        "project": "libs/public/ws-thanos/ng-package.json",
        "tsConfig": "libs/public/ws-thanos/tsconfig.lib.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/public/ws-thanos/tsconfig.lib.prod.json"
        },
        "development": {}
      },
      "defaultConfiguration": "production"
    },
    "lint": {
      "options": {
        "args": ["./**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/public/ws-thanos"],
      "options": {
        "jestConfig": "libs/public/ws-thanos/jest.config.ts",
        "passWithNoTests": false,
        "codeCoverage": true,
        "tsConfig": "libs/public/ws-thanos/tsconfig.spec.json"
      }
    },
    "ct": {
      "executor": "nx:run-commands",
      "outputs": [
        "{workspaceRoot}/playwright-report",
        "{workspaceRoot}/test-results"
      ],
      "options": {
        "command": "npx playwright test --config=playwright-ct.config.ts",
        "cwd": "libs/public/ws-thanos"
      }
    }
  }
}
