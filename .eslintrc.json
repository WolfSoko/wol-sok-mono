{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nrwl/nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "allow": [],
            // update depConstraints based on your tags
            "depConstraints": [
              {
                "sourceTag": "app",
                "onlyDependOnLibsWithTags": [
                  "shared",
                  "feature",
                  "feature:lazy",
                  "api"
                ]
              },
              {
                "sourceTag": "feature",
                "onlyDependOnLibsWithTags": [
                  "shared",
                  "api"
                ]
              },
              {
                "sourceTag": "feature:lazy",
                "onlyDependOnLibsWithTags": [
                  "shared",
                  "api"
                ]
              },
              {
                "sourceTag": "shared",
                "onlyDependOnLibsWithTags": [
                  "shared",
                  "api"
                ]
              },
              {
                "sourceTag": "api",
                "onlyDependOnLibsWithTags": [
                  "api"
                ]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nrwl/nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nrwl/nx/javascript"],
      "rules": {}
    }
  ]
}
